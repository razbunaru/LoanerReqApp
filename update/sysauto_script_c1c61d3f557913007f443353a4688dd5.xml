        <script><![CDATA[var gr = new GlideRecord("x_snc_loaner_reque_loaner_request");

var returnRemindTime = gs.getProperty('x_snc_loaner_reque.return.remindtime', 24) *60 *60 *1000;

var noticeTime = new GlideDateTime();
noticeTime.add(returnRemindTime);

gr.addQuery('state',16);
gr.addQuery('return_reminder','');
gr.addQuery('end_date','<=',noticeTime);

gr.query();

var rightNow = new GlideDateTime();

while (gr.next()) {
	
	gr.return_reminder = rightNow;
	gr.update();
	
	gs.eventQueue('x_snc_loaner_reque.return',gr,gr.number,gs.getUserName());
	
}]]></script>
